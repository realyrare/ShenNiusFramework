    <![endif]-->
</head>

<body class="layui-layout-body layuimini-all" style="overflow:auto">
    @RenderBody()
    <script src="/lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
    <script src="/js/lay-config.js" charset="utf-8" asp-append-version="true"></script>
    @RenderSection("js", required: false)
